          },
          "reason": {
            "type": "string",
            "example": "Reason of booking appointment"
          }
        }
      },
      "SaveSlot": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "doctor_id": {
              "type": "string",
              "example": "6bddd1a6-81c4-4002-92ca-9e435859e5e5"
            },
            "title": {
              "type": "string",
              "example": "Available Slot"
            },
            "start_time": {
              "type": "string",
              "example": "01:00:00.000"
            },
            "end_time": {
              "type": "string",
              "example": "01:30:00.000"
            },
            "slot_date": {
              "type": "string",
              "example": "2025-06-17"
            }
          }
        }
      }
