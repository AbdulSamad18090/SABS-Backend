{
  "openapi": "3.0.0",
  "info": {
    "title": "Smart Appointment Booking System",
    "description": "API documentation for the Smart Appointment Booking System",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/auth/signup": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "Payload is required",
        "responses": {
          "400": {
            "description": "Bad Request"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "Route for login user",
        "responses": {
          "400": {
            "description": "Bad Request"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              }
            }
          }
        }
      }
    },
    "/api/auth/refresh-token": {
      "post": {
        "tags": [
          "Auth"
        ],
        "description": "API route for refreshing the expired access token",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RefreshToken"
              }
            }
          }
        }
      }
    },
    "/api/user/doctor/get": {
      "get": {
        "tags": [
          "User"
        ],
        "description": "API route to fetch doctors with pagination",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number (starts at 1)",
            "required": false,
            "default": 1,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of doctors per page",
            "required": false,
            "default": 50,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        }
      }
    },
    "/api/user/doctor/update": {
      "put": {
        "tags": [
          "User"
        ],
        "description": "API route for updating a user.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUser"
              }
            }
          }
        }
      }
    },
    "/api/user/delete/{id}": {
      "delete": {
        "tags": [
          "User"
        ],
        "description": "API route for account deletion or user deletion.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID of the user you want to delete"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "full_name": {
            "type": "string",
            "example": "User Full name."
          },
          "email": {
            "type": "string",
            "example": "User Email"
          },
          "password": {
            "type": "string",
            "example": "password"
          },
          "role": {
            "type": "string",
            "example": "doctor / patient"
          }
        }
      },
      "UpdateUser": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "6bddd1a6-81c4-4002-92ca-9e435859e5e5"
          },
          "full_name": {
            "type": "string",
            "example": "Abdul Samad"
          },
          "profile_image": {
            "type": "string",
            "example": "URL of image"
          },
          "phone_number": {
            "type": "string",
            "example": "03345455964"
          },
          "bio": {
            "type": "string",
            "example": "This is my Bio."
          },
          "specialization": {
            "type": "string",
            "example": "Dermatology"
          },
          "university": {
            "type": "string",
            "example": "Harvard Medical School"
          },
          "graduation_year": {
            "type": "number",
            "example": 2013
          },
          "experience": {
            "type": "number",
            "example": 12
          },
          "address": {
            "type": "string",
            "example": "House D-237, Block D, Street 54, PAEC ECHS, Rawat, Islamabad"
          },
          "medical_license": {
            "type": "string",
            "example": "MD123456789"
          }
        }
      },
      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "Your email"
          },
          "password": {
            "type": "string",
            "example": "Your password"
          }
        }
      },
      "RefreshToken": {
        "type": "object",
        "properties": {
          "refreshToken": {
            "type": "string",
            "example": "valid refresh token"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "description": "Enter your token as: Bearer <token>"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}